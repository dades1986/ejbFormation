<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">
  <display-name>BanqueWeb</display-name>
  <welcome-file-list>
    <welcome-file>BanqueJsp.jsp</welcome-file>
  </welcome-file-list>
  
  <!-- Define the BankServlet -->
    <servlet>
        <servlet-name>BankServlet</servlet-name>
        <servlet-class>service.BankServlet</servlet-class>
    </servlet>

    <!-- Map the servlet to a URL pattern -->
    <servlet-mapping>
        <servlet-name>BankServlet</servlet-name>
        <url-pattern>/bank</url-pattern>
    </servlet-mapping>
</web-app>